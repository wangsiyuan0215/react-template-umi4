{
    "compilerOptions": {
        "jsx": "react-jsx",
        "paths": {
            "@/*": ["src/*"],
            "@@/*": ["src/.umi/*"],
            "@root/*": ["*"]
        },
        "target": "esnext",
        "module": "esnext",
        "strict": false,
        "baseUrl": "./",
        "sourceMap": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "include": ["mock/**/*", "src/**/*", "config/**/*", ".umirc.ts", "typings.d.ts", "src/types/*.d.ts"],
    "exclude": ["node_modules", "lib", "es", "dist", "typings", "**/__test__", "test", "docs", "tests"]
}
